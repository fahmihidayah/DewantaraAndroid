<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.dewantara_android"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/school"
        android:label="@string/app_name"
        android:theme="@style/Theme.Dewantara" >
        <activity
            android:name="com.dewantara_android.SplashScreenActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar.Fullscreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dewantara_android.LoginActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dewantara_android.LoginActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dewantara_android.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dewantara_android.MainActivity"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.dewantara_android.EditProfileActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dewantara_android.EditProfileActivity"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
        
        <activity
            android:name="com.dewantara_android.AbsensiActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="com.dewantara_android.AbsensiActivity"/>

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>
    </application>

</manifest>